# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Extraction Settings
MAX_RETRIES=3
FETCH_TIMEOUT=30000

# Batch Processing
MAX_CONCURRENT_WORKERS=5

# Storage
STORAGE_PATH=./stories
DB_PATH=./data/stories.db

# Anthropic AI (required for AI-powered extraction)
# Without this key, the service falls back to rule-based parsing
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_TIMEOUT=60000

# URL Box Integration (optional - for PDF screenshot generation)
URLBOX_API_KEY=
URLBOX_SCREENSHOT_WIDTH=1280
URLBOX_SCREENSHOT_HEIGHT=1024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
